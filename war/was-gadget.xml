<Module>
  <ModulePrefs title="Weekly Summary" height="300"/>
  <UserPref name="hideAuthPopup" display_name="Hide Authentication Popup" datatype="bool" default_value="false"/>
  <Content type="html">
    <![CDATA[
        <style type='text/css'>
            .was-gadget-container{
                padding:0px 3px;
            }
            .was-gadget {
                width:144;
                display:inline-block;
            }
            .was-gadget * {
